<UserControl
    x:Class="UI.MVVM.Controls.LabeledInputControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    d:DesignHeight="80"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            x:Name="LabelTextBlock"
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Foreground="White"
            Text="{Binding Label, ElementName=Root}" />

        <TextBox
            x:Name="InputTextBox"
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            VerticalAlignment="Center"
            Background="#555555"
            BorderBrush="Green"
            BorderThickness="0.5"
            Foreground="White"
            Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2, ValidatesOnDataErrors=True}" />

        <TextBlock
            x:Name="DescriptionTextBox"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="5,0,5,5"
            Background="#444444"
            Foreground="LightGray"
            Text="{Binding Description, ElementName=Root}" />
    </Grid>
</UserControl>
