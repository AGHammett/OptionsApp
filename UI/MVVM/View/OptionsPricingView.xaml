<UserControl
    x:Class="UI.MVVM.View.OptionsPricingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:UI.MVVM.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:UI.MVVM.ViewModel"
    d:DesignHeight="525"
    d:DesignWidth="800"
    Background="Black"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:OptionsPricingViewModel />
    </UserControl.DataContext>

    <Border
        Width="700"
        Height="505"
        Padding="20"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="#333333"
        CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Input Option Parameters" />

                <Grid>
                    <Grid.RowDefinitions>
                        <!--  Define 6 rows  -->
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Security Price  -->
                    <GroupBox Grid.Row="0" BorderThickness="0">
                        <controls:LabeledInputControl
                            Description="Price of underlying security in chosen currency"
                            Label="Security Price (S):"
                            Value="{Binding S, StringFormat=N2}" />
                    </GroupBox>

                    <!--  Strike Price  -->
                    <GroupBox Grid.Row="1" BorderThickness="0">
                        <controls:LabeledInputControl
                            Description="Price at which the option can be exercised"
                            Label="Strike Price (K):"
                            Value="{Binding K, StringFormat=N2}" />
                    </GroupBox>

                    <!--  Time to Maturity  -->
                    <GroupBox Grid.Row="2" BorderThickness="0">
                        <controls:LabeledInputControl
                            Description="Enter the time remaining until the option expires (in years)."
                            Label="Time to Maturity (T):"
                            Value="{Binding T, StringFormat=N2}" />
                    </GroupBox>

                    <!--  Short Rate  -->
                    <GroupBox Grid.Row="3" BorderThickness="0">
                        <controls:LabeledInputControl
                            Description="Enter the risk-free interest rate."
                            Label="Short Rate (R):"
                            Value="{Binding R, StringFormat=N4}" />
                    </GroupBox>

                    <!--  Volatility  -->
                    <GroupBox Grid.Row="4" BorderThickness="0">
                        <controls:LabeledInputControl
                            Description="Enter the expected volatility of the underlying security."
                            Label="Volatility (Sigma):"
                            Value="{Binding Sigma, StringFormat=N4}" />
                    </GroupBox>

                    <!--  Option Type  -->
                    <GroupBox Grid.Row="5" BorderThickness="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="5"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Call or Put:" />

                            <Button
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="157"
                                Margin="5"
                                Padding="5,5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="#0078D7"
                                Command="{Binding ToggleOptionTypeCommand}"
                                Content="{Binding SelectedOptionType}"
                                Foreground="White" />

                        </Grid>
                    </GroupBox>
                </Grid>

                <Button
                    Margin="0,20,0,0"
                    Padding="10,5"
                    HorizontalAlignment="Center"
                    Background="#0078D7"
                    Command="{Binding CalculateCommand}"
                    Content="Calculate"
                    Foreground="White" />
            </StackPanel>

            <!--  Right Hand Side - Outputs of Calulation  -->
            <StackPanel Grid.Column="1" Margin="10">

                <Grid
                    Width="261"
                    Height="47"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="130" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Option Value: " />

                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize=" 20"
                        FontWeight="Bold"
                        Foreground="#00FF00"
                        Text="{Binding ValueResult, StringFormat=N2}" />
                </Grid>

                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Option Greeks" />

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="Delta:" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="#00FF00"
                        Text="{Binding Greeks.Delta, StringFormat=N4}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="Gamma:" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="#00FF00"
                        Text="{Binding Greeks.Gamma, StringFormat=N4}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="Theta:" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="#00FF00"
                        Text="{Binding Greeks.Theta, StringFormat=N4}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="Vega:" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="#00FF00"
                        Text="{Binding Greeks.Vega, StringFormat=N4}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="Rho:" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="#00FF00"
                        Text="{Binding Greeks.Rho, StringFormat=N4}" />
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>