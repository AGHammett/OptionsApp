<UserControl x:Class="UI.MVVM.View.OptionsPricingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.MVVM.View"
             xmlns:vm="clr-namespace:UI.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="525" d:DesignWidth="800"
             Background="Black">

    <UserControl.DataContext>
        <vm:OptionsPricingViewModel/>
    </UserControl.DataContext>

        <!-- Calculator Content - Centered with white text for visibility on black background -->
    <Border Background="#333333" 
                CornerRadius="10"
                Padding="20" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Width="700"
                Height="505">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Side: Existing UI -->
            <StackPanel Grid.Column="0" Margin="10">

                <!-- Title -->
                <TextBlock Text="Input Option Parameters" 
                   FontSize="18" FontWeight="Bold" 
                   Foreground="White" Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

                <!-- Input Fields -->
                <Grid Height="200" Width="364">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Security Price -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Security Price (S):" 
                       Foreground="White" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding S, StringFormat=N2}" 
                     Margin="5" Background="#555555" Foreground="White" BorderBrush="Gray"/>

                    <!-- Strike Price -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Strike Price (K):" 
                       Foreground="White" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding K, StringFormat=N2}" 
                     Margin="5" Background="#555555" Foreground="White" BorderBrush="Gray"/>

                    <!-- Time to Maturity -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Time to Maturity (T):" 
                       Foreground="White" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding T, StringFormat=N2}" 
                     Margin="5" Background="#555555" Foreground="White" BorderBrush="Gray"/>

                    <!-- Short Rate -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Short Rate (R):" 
                       Foreground="White" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding R, StringFormat=N4}" 
                     Margin="5" Background="#555555" Foreground="White" BorderBrush="Gray"/>

                    <!-- Volatility -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Volatility (Sigma):" 
                       Foreground="White" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Sigma, StringFormat=N4}" 
                     Margin="5" Background="#555555" Foreground="White" BorderBrush="Gray"/>

                    <!-- Option Value -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Option Value (V):" 
                       Foreground="White" Margin="5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding V, StringFormat=N2}" 
                     Margin="5" Background="#555555" Foreground="White" BorderBrush="Gray"/>
                    
                    <!-- Put/Call Toggle Button -->
                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Call or Put:" 
                        Foreground="White" Margin="5" VerticalAlignment="Center"/>
                    <Button Grid.Row="6" Grid.Column="1" Content="{Binding SelectedOptionType}" 
                            Command="{Binding ToggleOptionTypeCommand}" 
                    Margin="5,2,0,0" Padding="5,5" HorizontalAlignment="Left"
                    Background="#0078D7" Foreground="White" Width="157"/>

                </Grid>

                <!-- Calculate Button -->
                <Button Content="Calculate" Command="{Binding CalculateCommand}" 
                Margin="0,20,0,0" Padding="10,5" HorizontalAlignment="Center"
                Background="#0078D7" Foreground="White"/>

                <!-- Result Display -->
                <Grid HorizontalAlignment="Center" Margin="0,20,0,0" Height="47" Width="261">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="130"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Option Value: " FontSize ="20" FontWeight="Bold" Foreground="White"
                    VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="0"/>

                    <TextBlock Text="{Binding ValueResult, StringFormat=N2}" FontWeight="Bold" 
                               FontSize =" 20" Foreground="#00FF00" VerticalAlignment="Center" 
                               HorizontalAlignment="Stretch" Grid.Column="1"/>
                </Grid>

            </StackPanel>

            <!-- Right Side: Greeks Display -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Option Greeks" 
               FontSize="18" FontWeight="Bold" 
               Foreground="White" Margin="0,0,0,20"
               HorizontalAlignment="Center"/>

                <!-- Greek Values Display -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Delta -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Delta:" 
                   Foreground="White" Margin="5" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                   Text="{Binding Greeks.Delta, StringFormat=N4}" 
                   Foreground="#00FF00" Margin="5" VerticalAlignment="Center"/>

                    <!-- Gamma -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Gamma:" 
                   Foreground="White" Margin="5" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" 
                   Text="{Binding Greeks.Gamma, StringFormat=N4}" 
                   Foreground="#00FF00" Margin="5" VerticalAlignment="Center"/>

                    <!-- Theta -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Theta:" 
                   Foreground="White" Margin="5" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" 
                   Text="{Binding Greeks.Theta, StringFormat=N4}" 
                   Foreground="#00FF00" Margin="5" VerticalAlignment="Center"/>

                    <!-- Vega -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Vega:" 
                   Foreground="White" Margin="5" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" 
                   Text="{Binding Greeks.Vega, StringFormat=N4}" 
                   Foreground="#00FF00" Margin="5" VerticalAlignment="Center"/>

                    <!-- Rho -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Rho:" 
                   Foreground="White" Margin="5" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" 
                   Text="{Binding Greeks.Rho, StringFormat=N4}" 
                   Foreground="#00FF00" Margin="5" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </Grid>

    </Border>
</UserControl>
